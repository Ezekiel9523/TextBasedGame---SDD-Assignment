<Window x:Class="SkillTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SkillTab" Height="400" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="SkillsBox" HorizontalAlignment="Left" Height="315" Margin="106,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Grid.ColumnSpan="2"/>
        <Button x:Name="ExitBtn" Content="Exit" HorizontalAlignment="Left" Margin="106,330,0,0" VerticalAlignment="Top" Width="176" Height="30" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
